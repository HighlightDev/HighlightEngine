<UserControl x:Class="WpfControlLibrary1.MenuToolbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfControlLibrary1"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Menu Width="Auto" Height="25" Background="#FF252525" DockPanel.Dock="Top">
            <MenuItem FontFamily="Comic Sans MS, Verdana" FontSize="15" Header="File" Foreground="#FFC1C1C1">
                <MenuItem  Header="Save" Click="MenuItem_Click" Foreground="Black" />
                <MenuItem Header="Load" Click="MenuItem_Click" Foreground="Black"/>
                <Separator />
                <MenuItem Click="MenuItem_Click">
                    <MenuItem.Header>
                        <DockPanel>
                            <TextBlock Foreground="Black">This is hint</TextBlock>
                            <TextBlock Width="10"></TextBlock>
                            <TextBlock HorizontalAlignment="Right" Foreground="Black">F2</TextBlock>
                        </DockPanel>
                    </MenuItem.Header>
                </MenuItem>
            </MenuItem>
        </Menu>

    </Grid>
</UserControl>
