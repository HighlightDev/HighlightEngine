<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WpfControlLibrary1"
                    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
                    x:Class="WpfControlLibrary1.PropertyDataTemplate"
                    x:ClassModifier="public">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="CommonResources.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- Entities template -->
    <DataTemplate x:Key="templateEntityProperty">
        <StackPanel>

            <StackPanel x:Name="stackPanel_Transformation" Orientation="Vertical" Style="{StaticResource EngineListBoxStackPanelBackground}">

                <DockPanel x:Name="stackPanel_TransformationHeader" MouseDown="SubHeader_MouseDown" Height="25">
                    <Image x:Name="image_transformationHeader"
                                           Height="10"
                                           Margin="5 0 10 0"
                                           Loaded="subheaderImageLoaded"
                                           Source="{Binding ElementName=image_transformationHeader, Path=DataContext.ImageSrc}" />
                    <Label Style="{StaticResource ResourceKey=engineLabelStyle_Size3}"
                                            Content="Transform"
                                            HorizontalAlignment="Left"/>
                </DockPanel>

                <Border BorderBrush="Gray" BorderThickness="0 1 0 1">
                    <StackPanel x:Name="stackPanel_TransformationContent" Orientation="Vertical" Style="{StaticResource EngineListBoxStackPanelBackground}">

                        <DockPanel x:Name="dockPanel_Translation">

                            <StackPanel Margin="0, 10, 0, 0">
                                <DockPanel Height="24">
                                    <Label Style="{StaticResource ResourceKey=engineLabelStyle_Size3}"
                                            Content="Translation"
                                            HorizontalAlignment="Center"/>
                                </DockPanel>
                                <Border Style="{StaticResource engineBorderDefaultPlusHoverColor}"
                                                BorderThickness="1">
                                    <DockPanel>
                                        <Image x:Name="image_leftArrowTranslation"
                                                            VerticalAlignment="Center"
                                                            HorizontalAlignment="Left"
                                                            Loaded="ImageLeftArrowLoaded"
                                                            Source="{Binding ElementName=image_leftArrowTranslation, Path=DataContext.ImageSrc}"
                                                            Width="14"
                                                            Height="14"
                                                            Margin="10, 0, 0, 0"/>
                                        <TextBlock Style="{StaticResource ResourceKey=engineTextBlockStyle_Size3}"
                                                    Width="198"
                                                    TextAlignment="Center"
                                                    HorizontalAlignment="Center"
                                                    Text="0"
                                                    VerticalAlignment="Center" 
                                                    Margin="0, 0, 0, 0"/>
                                        <Image x:Name="image_rightArrowTranslation"
                                                               HorizontalAlignment="Right"
                                                               Loaded="ImageRightArrowLoaded"
                                                               Width="14"
                                                               Height="14" 
                                                               Source="{Binding ElementName=image_rightArrowTranslation, Path=DataContext.ImageSrc}"
                                                               VerticalAlignment="Center"
                                                               Margin="0, 0, 8, 0"/>
                                    </DockPanel>
                                </Border>
                            </StackPanel>

                        </DockPanel>

                        <DockPanel x:Name="dockPanel_Rotation">
                            <StackPanel Margin="0, 10, 0, 0">
                                <DockPanel Height="24">
                                    <Label Style="{StaticResource ResourceKey=engineLabelStyle_Size3}"
                                            Content="Rotation"
                                            HorizontalAlignment="Center"/>
                                </DockPanel>
                                <Border Style="{StaticResource engineBorderDefaultPlusHoverColor}"
                                                BorderThickness="1">
                                    <DockPanel>
                                        <Image x:Name="image_leftArrowRotation"
                                                            VerticalAlignment="Center"
                                                            HorizontalAlignment="Left"
                                                            Loaded="ImageLeftArrowLoaded"
                                                            Source="{Binding ElementName=image_leftArrowRotation, Path=DataContext.ImageSrc}"
                                                            Width="14"
                                                            Height="14"
                                                            Margin="10, 0, 0, 0"/>
                                        <TextBlock Style="{StaticResource ResourceKey=engineTextBlockStyle_Size3}"
                                                    Width="198"
                                                    TextAlignment="Center"
                                                    HorizontalAlignment="Center"
                                                    Text="0"
                                                    VerticalAlignment="Center" 
                                                    Margin="0, 0, 0, 0"/>
                                        <Image x:Name="image_rightArrowRotation"
                                                               HorizontalAlignment="Right"
                                                               Loaded="ImageRightArrowLoaded"
                                                               Width="14"
                                                               Height="14" 
                                                               Source="{Binding ElementName=image_rightArrowRotation, Path=DataContext.ImageSrc}"
                                                               VerticalAlignment="Center"
                                                               Margin="0, 0, 8, 0"/>
                                    </DockPanel>
                                </Border>
                            </StackPanel>
                        </DockPanel>

                        <DockPanel x:Name="dockPanel_Scale">
                            <StackPanel Margin="0, 10, 0, 0">
                                <DockPanel Height="24">
                                    <Label Style="{StaticResource ResourceKey=engineLabelStyle_Size3}"
                                            Content="Scale"
                                            HorizontalAlignment="Center"/>
                                </DockPanel>
                                <Border Style="{StaticResource engineBorderDefaultPlusHoverColor}"
                                                BorderThickness="1">
                                    <DockPanel>
                                        <Image x:Name="image_leftArrowScale"
                                                            VerticalAlignment="Center"
                                                            HorizontalAlignment="Left"
                                                            Loaded="ImageLeftArrowLoaded"
                                                            Source="{Binding ElementName=image_leftArrowScale, Path=DataContext.ImageSrc}"
                                                            Width="14"
                                                            Height="14"
                                                            Margin="10, 0, 0, 0"/>
