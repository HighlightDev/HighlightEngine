                                            <TextBlock x:Name="textBlock_LoadMesh"
                                                               Style="{StaticResource engineTextBlockResourceSelectorStyle}"
                                                               Text="C:\\mesh\\mesh.dae"
                                                               TextAlignment="Left"
                                                               MouseDown="TextBlockSelector_MouseDown"
                                                               TextTrimming="CharacterEllipsis"/>
                                        </Border>
                                    </DockPanel>
                                </Border>
                            </StackPanel>

                        </DockPanel>
                    </Border>

                </StackPanel>

            </StackPanel>

