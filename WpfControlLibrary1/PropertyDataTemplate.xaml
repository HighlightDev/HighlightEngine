                                            Content="Mesh"
                                            HorizontalAlignment="Left"/>
                </DockPanel>

                <StackPanel x:Name="stackPanel_EntityMeshContent" Orientation="Vertical" Style="{StaticResource EngineListBoxStackPanelBackground}">

                    <Border BorderBrush="Gray" BorderThickness="0 1 0 1">
                        <DockPanel x:Name="dockPanel_EntityMeshLoading">

                            <StackPanel Margin="0, 10, 0, 0" Height="24">
                                <Border Style="{StaticResource engineBorderNoDefaultPlusHoverColor}"
                                                BorderThickness="1">
